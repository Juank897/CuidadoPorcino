@page
@model CuidadoPorcino.App.Frontend.Pages.listaModel
@{
}
<h1>Listado de cerdos</h1>
<table class="table">
 @foreach (var cerdo in Model.cerdos)
 {
    <tr>
        <td>@cerdo.Nombre</td>
        <td>@cerdo.Color</td>
        <td>@cerdo.Especie</td>
        <td>
            <a class="btn btn-primary table-btn" asp-page="./Detalles" asp-route-IdCerdos="@cerdo.IdCerdos" >Detalles <i class="fas fa-info-circle fa-lg" aria-hidden="true"></i>  </a>
        </td>
    </tr>
    
 }

</table>